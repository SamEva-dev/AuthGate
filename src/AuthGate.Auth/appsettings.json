{
  "Seq": {
    "ServerUrl": "https://localhost:8081"
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Expressions",
      "Serilog.Sinks.SQLite",
      "Serilog.Sinks.PostgreSQL",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Sinks.PostgreSQL.Configuration"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Debug",
        "RabbitMq": "Verbose",
        "RulesEngine": "Verbose"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithClientIp",
      "WithCorrelationId",
      "WithProcessId"
    ],
    "Properties": {
      "Application": "Locaguest"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%AUTHGATE_HOME%/log/AuthGate/AuthGateService_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%AUTHGATE_HOME%/log/AuthGate/EntityFramework/EntityFramework_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}",
                  "restrictedToMinimumLevel": "Information"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:8081" }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=AuthGate_Audit;Username=postgres;Password=",
          "tableName": "AppLogs",
          "needAutoCreateTable": true,
          "schemaName": "public",
          "useCopy": false,
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "%AUTHGATE_HOME%/Data/AuthAudit.db",
          "tableName": "Logs",
          "storeTimestampInUtc": true,
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "AuthGate",
    "Audience": "LocaGuest",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection_Auth": "Host=localhost;Port=5432;Database=AuthGate;Username=postgres;Password=",
    "AuditConnection_Auth": "Host=localhost;Port=5432;Database=AuthGate_Audit;Username=postgres;Password=",
    "SqliteConnection": "Data Source=./Data/AuthGate.db",
    "SqliteAuditConnection": "Data Source=./Data/AuthGateAudit.db"
  },

  "Database": {
    "Provider": "PostgreSql"
  },
  "HttpClients": {
    "LocaGuestApi": {
      "BaseUrl": "https://localhost:5001"
    }
  },
  "LocaGuest": {
    "ApiBaseUrl": "https://localhost:5001",
    "MachineToken": {
      "ClientId": "authgate",
      "Audience": "LocaGuest",
      "TokenLifetimeMinutes": 2
    },
    "Resilience": {
      "AttemptTimeoutSeconds": 5,
      "TotalTimeoutSeconds": 20,
      "MaxRetries": 2,
      "BreakDurationSeconds": 30,
      "MinimumThroughput": 10,
      "FailureRatio": 0.5
    }
  },
  "Cors": {
    "AllowedOrigins": [ 
      "http://localhost:4200", 
      "https://locaguest-frontend.fly.dev",
      "http://localhost:4300" ]
  },
  "Frontend": {
    "Url": "http://localhost:4200",
    "ResetPasswordUrl": "https://myapp.com/reset-password"
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": "1025",
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromAddress": "noreply@authgate.com",
    "FromName": "AuthGate"
  },
  "AuditRetention": {
    "Days": 7,
    "RunIntervalHours": 24
  }
}