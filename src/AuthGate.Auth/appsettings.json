{
  "Seq": {
    "ServerUrl": "https://localhost:8081"
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Expressions",
      "Serilog.Sinks.SQLite"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Debug",
        "RabbitMq": "Verbose",
        "RulesEngine": "Verbose"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithClientIp",
      "WithCorrelationId"
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%AUTHGATE_HOME%/log/AuthGate/AuthGateService_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "%AUTHGATE_HOME%/log/AuthGate/EntityFramework/EntityFramework_log.txt",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true,
                  "retainedFileCountLimit": 100,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}",
                  "restrictedToMinimumLevel": "Information"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:8081" }
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "Data Source=Data/AuthAudit.db",
          "tableName": "Logs",
          "storeTimestampInUtc": true,
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:8080"
      },
      "Https": {
        "Url": "https://localhost:8081"
      }
    }
  },
  "Jwt": {
    "SecretKey": "REPLACE_WITH_A_LONG_RANDOM_SECRET_64+CHARS",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "Sqlite": "Data/AuthGate.db",
    "Audit": "Data/AuthAudit.db"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },
  "Frontend": {
    "ResetPasswordUrl": "https://myapp.com/reset-password"
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "User": "noreply.myapp@gmail.com",
    "Pass": "your_app_password",
    "From": "AuthGate <noreply.myapp@gmail.com>"
  }
}