  },
  "Identity": {
    "SeedPlatformAdmin": true,
    "SeedRoles": true,
    "PlatformAdmin": {
      "Email": "platform@locaguest.local",
      "InitialPassword": "DevOnly_ChangeMe123!",
      "FirstName": "Platform",
      "LastName": "Owner"
    }
  },
  "Brevo": {
    "Mode": "BREVO_API",
    "DefaultTagsCsv": "authgate-dev",
    "ApiKey": "",
    "ApiBaseUrl": "https://api.brevo.com",
    "SenderName": "Authgate",
    "SenderEmail": "no-reply@locaguest.com",
    "SupportEmail": "support@locaguest.com",
    "Sandbox": false,
    "WebhookToken": "",
    "SmtpHost": "smtp-relay.brevo.com",
    "SmtpPort": 587,
    "SmtpUsername": "sam.fokam@gmail.com",
    "SmtpPassword": "",
