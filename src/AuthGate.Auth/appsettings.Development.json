{
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:8080"
      },
      "Https": {
        "Url": "https://localhost:8081"
      }
    }
  },
  "HttpClients": {
    "LocaGuestApi": {
      "BaseUrl": "https://localhost:5001"
    }
