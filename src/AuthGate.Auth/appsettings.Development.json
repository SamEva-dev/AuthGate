{
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:8080"
      },
      "Https": {
        "Url": "https://localhost:8081"
      }
    }
  },
  "HttpClients": {
    "LocaGuestApi": {
      "BaseUrl": "https://localhost:5001"
    }
  },
  "LocaGuest": {
    "ApiBaseUrl": "https://localhost:5001",
    "MachineToken": {
      "ClientId": "authgate",
      "Audience": "LocaGuest",
      "TokenLifetimeMinutes": 2
    },
    "Resilience": {
      "AttemptTimeoutSeconds": 5,
      "TotalTimeoutSeconds": 20,
      "MaxRetries": 2,
      "BreakDurationSeconds": 30,
      "MinimumThroughput": 10,
      "FailureRatio": 0.5
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuditRetention": {
    "Days": 7,
    "RunIntervalHours": 24
  }
}
